{
  "name": "korean-directory",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "prisma generate && next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:check": "npx tsx scripts/db-check.ts",
    "ingest": "npx tsx scripts/ingest.ts",
    "seed:enrich": "npx tsx scripts/seed-enrichment.ts",
    "audit:bilingual": "npx tsx scripts/audit-bilingual.ts",
    "audit:seo": "npx tsx scripts/seoFinalAudit.ts",
    "audit:category-distribution": "npx tsx scripts/audit-category-distribution.ts",
    "audit:category-outliers": "npx tsx scripts/audit-category-outliers.ts",
    "audit:all": "npm run audit:category-distribution && npm run audit:category-outliers",
    "taxonomy:fix": "npx tsx scripts/taxonomy-fix.ts",
    "taxonomy:remap": "npx tsx scripts/taxonomy-remap.ts",
    "enrich:import-hanindoc": "npx tsx scripts/import-hanindoc-enrichment.ts",
    "enrich:report": "npx tsx scripts/enrichment-report.ts",
    "crawl:ca": "npx tsx scripts/crawl-ca.ts",
    "crawl:au": "npx tsx scripts/crawl-au.ts",
    "promote:ca": "npx tsx scripts/promote-ca.ts",
    "promote:au": "npx tsx scripts/promote-au.ts",
    "promote:all": "npm run promote:ca && npm run promote:au",
    "seo:audit": "npx tsx scripts/seo/audit-indexing.ts --base=${BASE_URL:-https://www.haninmap.com} --pathsFromSitemap=true --sample=300"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "next": "14.2.35",
    "prisma": "^5.22.0",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/cheerio": "^0.22.35",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "cheerio": "^1.2.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.35",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
