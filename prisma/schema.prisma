generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Business {
  id                Int           @id @default(autoincrement())
  nameKo            String
  nameEn            String?
  phoneE164         String?
  phoneRaw          String?
  addressRaw        String
  addressNorm       String?
  city              String
  state             String        @default("CA")
  zip               String?
  countryCode       String        @default("US")
  lat               Float?
  lng               Float?
  primaryCategoryId Int
  subcategoryId     Int?
  sourceKeys        Json          // [{source: "radiokorea", uid: "123"}, ...]
  dedupeClusterId   Int?
  qualityScore      Float         @default(0)
  slug              String?       @unique
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  primaryCategory   Category      @relation("PrimaryCategory", fields: [primaryCategoryId], references: [id])
  subcategory       Category?     @relation("Subcategory", fields: [subcategoryId], references: [id])
  googlePlace       GooglePlace?

  @@index([city, state])
  @@index([primaryCategoryId])
  @@index([subcategoryId])
  @@index([dedupeClusterId])
  @@index([phoneE164])
  @@index([slug])
  @@index([countryCode])
}

model Category {
  id        Int        @id @default(autoincrement())
  slug      String     @unique
  nameKo    String
  nameEn    String
  level     String     // 'primary' | 'sub'
  parentId  Int?
  parent    Category?  @relation("CategoryHierarchy", fields: [parentId], references: [id])
  children  Category[] @relation("CategoryHierarchy")

  primaryBusinesses Business[] @relation("PrimaryCategory")
  subBusinesses     Business[] @relation("Subcategory")

  @@index([parentId])
  @@index([level])
}

model GooglePlace {
  id                Int       @id @default(autoincrement())
  businessId        Int       @unique
  placeId           String
  rating            Float?
  userRatingsTotal  Int?
  formattedAddress  String?
  lat               Float?
  lng               Float?
  openingHoursJson  Json?     // Full opening hours with periods
  openingHoursText  Json?     // Weekday text array (legacy)
  types             Json?
  website           String?
  phoneE164         String?
  photosJson        Json?     // Array of photo objects
  googleMapsUrl     String?
  editorialSummary  String?
  lastFetchedAt     DateTime
  fetchStatus       String    // 'ok' | 'error' | 'not_found'
  matchMethod       String?   // 'phone' | 'address' | 'name' | 'imported'
  matchConfidence   Float?    // 0.0 - 1.0
  sourceId          String?   // Original ID from source (e.g., HaninDoc UUID)

  business          Business  @relation(fields: [businessId], references: [id])

  @@index([placeId])
  @@index([fetchStatus])
  @@index([sourceId])
}

model EnrichmentQueue {
  id          Int       @id @default(autoincrement())
  businessId  Int
  reason      String    // 'seed' | 'traffic' | 'user_click'
  priority    Int       @default(0)
  status      String    @default("pending") // 'pending' | 'processing' | 'done' | 'failed'
  scheduledAt DateTime  @default(now())
  attempts    Int       @default(0)
  lastError   String?
  createdAt   DateTime  @default(now())

  @@index([status, priority, scheduledAt])
  @@index([businessId])
}

model EnrichmentBudget {
  id          Int       @id @default(autoincrement())
  monthYear   String    @unique // "2026-01"
  spentUsd    Float     @default(0)
  callCount   Int       @default(0)
}

model PageMetric {
  id          Int       @id @default(autoincrement())
  pageKey     String    @unique // "ca/los-angeles/dentist"
  impressions Int       @default(0)
  clicks      Int       @default(0)
  last30dUv   Int       @default(0)
  updatedAt   DateTime  @updatedAt

  @@index([last30dUv])
}

// === Promotion tracking ===

model PromotionRun {
  id              Int       @id @default(autoincrement())
  countryCode     String
  status          String    @default("running") // running | completed | failed
  startedAt       DateTime  @default(now())
  completedAt     DateTime?
  totalProcessed  Int       @default(0)
  totalPromoted   Int       @default(0)
  totalSkipped    Int       @default(0)
  totalErrors     Int       @default(0)
  skippedSample   Json?     // first 20 skipped records with reasons
  errorLog        String?

  @@index([countryCode])
}

// === Staging tables for multi-country crawl pipeline ===

model CrawlRun {
  id               Int       @id @default(autoincrement())
  countryCode      String    // CA, JP, AU
  sourceName       String    // e.g. "koreaportal-toronto"
  status           String    @default("running") // running | completed | failed
  startedAt        DateTime  @default(now())
  completedAt      DateTime?
  totalScraped     Int       @default(0)
  totalNormalized  Int       @default(0)
  totalDeduped     Int       @default(0)
  totalErrors      Int       @default(0)
  errorLog         String?

  rawBusinesses    RawBusiness[]

  @@index([countryCode])
  @@index([status])
}

model RawBusiness {
  id             Int       @id @default(autoincrement())
  countryCode    String    // CA, JP, AU
  sourceName     String    // e.g. "koreaportal-toronto"
  sourceUid      String    // unique ID from source site
  crawlRunId     Int
  status         String    @default("pending") // pending | normalized | deduped | promoted | error

  rawNameKo      String?
  rawNameEn      String?
  rawPhone       String?
  rawAddress     String?
  rawCity        String?
  rawRegion      String?   // province / prefecture / state
  rawPostalCode  String?
  rawCategory    String?
  rawSubcategory String?
  rawWebsite     String?
  rawEmail       String?
  rawLat         Float?
  rawLng         Float?
  rawPayload     Json?     // full original data

  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt

  crawlRun       CrawlRun  @relation(fields: [crawlRunId], references: [id])

  @@unique([sourceName, sourceUid])
  @@index([countryCode])
  @@index([status])
  @@index([crawlRunId])
}

model StagedBusiness {
  id               Int       @id @default(autoincrement())
  countryCode      String    // CA, JP, AU
  sourceName       String
  sourceUid        String
  rawBusinessId    Int?

  nameKo           String?
  nameEn           String?
  phoneE164        String?
  phoneRaw         String?
  addressRaw       String?
  addressNorm      String?
  city             String?
  region           String?   // province (CA), prefecture (JP), state (AU)
  postalCode       String?
  lat              Float?
  lng              Float?

  primaryCategory  String?   // slug matching existing taxonomy
  subcategory      String?   // slug matching existing taxonomy
  website          String?
  email            String?

  dedupeClusterId  Int?
  dedupeStatus     String    @default("pending") // pending | unique | duplicate | master
  promotionStatus  String    @default("pending") // pending | promoted | skipped

  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  @@unique([sourceName, sourceUid])
  @@index([countryCode])
  @@index([dedupeClusterId])
  @@index([dedupeStatus])
  @@index([promotionStatus])
  @@index([phoneE164])
}

model GuideContent {
  id            Int       @id @default(autoincrement())
  slug          String    @unique
  titleKo       String
  titleEn       String
  contentKo     String    @db.Text
  summary       String
  categorySlug  String
  faqsJson      Json      @default("[]")
  sourceUrls    Json      @default("[]")
  tags          Json      @default("[]")
  seasonStart   Int?
  seasonEnd     Int?
  publishedAt   DateTime?
  status        String    @default("draft")
  viewCount     Int       @default(0)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([categorySlug])
  @@index([status])
}
