model BusinessVote {
  id          Int      @id @default(autoincrement())
  businessId  String
  voteType    String // "up" | "down"
  fingerprint String
  ipHash      String
  createdAt   DateTime @default(now())

  @@unique([businessId, fingerprint])
  @@index([businessId])
}

// ‚îÄ‚îÄ‚îÄ ÌïúÏ§Ñ Î¶¨Î∑∞ ‚îÄ‚îÄ‚îÄ
model Review {
  id           Int      @id @default(autoincrement())
  businessId   String
  userId       String
  rating       Int
  content      String   @db.VarChar(200)
  tags         Json     @default("[]")
  status       String   @default("active")
  helpfulCount Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([businessId, userId])
  @@index([businessId, status])
  @@index([createdAt])
}

// ‚îÄ‚îÄ‚îÄ NextAuth ÏÇ¨Ïö©Ïûê ‚îÄ‚îÄ‚îÄ
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  provider      String?
  accounts      Account[]
  sessions      Session[]
  reviews       Review[]
  createdAt     DateTime  @default(now())

  @@index([email])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// ‚îÄ‚îÄ‚îÄ ÏõîÍ∞Ñ ÏïåÎ¶º ÌîºÎìú ‚îÄ‚îÄ‚îÄ
model AlertFeed {
  id           Int      @id @default(autoincrement())
  slug         String   @unique
  source       String
  titleKo      String
  titleEn      String?
  summaryKo    String   @db.Text
  contentKo    String?  @db.Text
  sourceUrl    String
  severity     String   @default("info")
  categorySlug String?
  publishedAt  DateTime
  status       String   @default("draft")
  createdAt    DateTime @default(now())

  @@index([source, publishedAt(sort: Desc)])
  @@index([status])
}
